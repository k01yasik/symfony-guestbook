{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">{{ 'Give your feedback!'|trans}}</h2>
            <div class="row">
                {% for conference in conferences %}
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">{{ conference }}</h4>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="{{ path('conference', {slug: conference.slug}) }}" class="btn btn-primary">{{ 'View'|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
